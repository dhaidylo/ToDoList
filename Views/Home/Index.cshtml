@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ToDoList.ViewModels.IndexViewModel

<h2>My TODO List</h2>
  
<form method="get">
    <div>
        <label>Lists: </label>
        <select name="list" asp-items="Model.EntriesLists"></select>
    </div>
</form>
  
<table>
    <tr>
        <th>Status</th>
        <th>Text</th>
        <th>List</th>
    </tr>
  
    @foreach (var item in Model.Entries)
    {
        <tr>
            <td><input asp-for="@item.IsDone" /></td>
            <td>@item.Text</td>
            <td>
                <button asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@item.Id">-</button>
            </td>
            <td>@item.ListId</td>
        </tr>
    }

    <tr>
        <a asp-action="Create" asp-controller="Entry">Add Task</a>
    </tr>
</table>